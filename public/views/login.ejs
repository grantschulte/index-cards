<section class="section-row home" ng-controller="LoginController">
  <div class="home-header">
    <h1>IndexCards v1</h1>
  </div>

  <div ng-show="err" class="login-errors">
    <div class="errors">
      <i class="fa fa-warning"></i> {{ err }}
    </div>
  </div>

  <div class="home-body">
    <div class="intro">
      <div class="index-card"
           ng-click="flipCard()"
           ng-class="{ on: cardOn === true }">
        <span ng-include="'views/includes/index_card.ejs'"></span>

        <div>
          <div class="front">Term</div>
          <div class="back">Definition for the term</div>
        </div>
      </div>
    </div>

    <div class="login-box">
      <div class="button-row">
        <button ng-class="{ active: showLogin === true }" ng-click="showLogin = true">Login</button>
        <button ng-class="{ active: showLogin === false }" ng-click="showLogin = false">Create Account</button>
      </div>
      <div class="form-row">
        <input type="text" ng-model="email" placeholder="Email">
        <input type="password" ng-model="password" placeholder="Password">
        <input type="password" ng-model="confirm" placeholder="Confirm Password" ng-show="!showLogin">
        <button ng-show="showLogin" class="create-btn" ng-click="login()">Login</button>
        <button ng-hide="showLogin" class="create-btn" ng-click="createAccount()">Create</button>
      </div>
    </div>
  </div>
</section>
