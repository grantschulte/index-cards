<section class="section-row set" ng-controller="SetsController">

  <div class="add-card section-row">
    <div>
      <input type="text" ng-model="term" placeholder="Term">
      <button class="btn" ng-click="createCard()">Create Card</button>
    </div>
    <textarea ng-model="definition" placeholder="Definition"></textarea>
  </div>

  <div class="index-card-container section-row">
    <div class="card" ng-repeat="(id, card) in cards">
      <p>{{ card.term }}</p>
      <button ng-click="deleteCard(id)">
        <i class="fa fa-times"></i>
      </button>
    </div>
  </div>

</section>