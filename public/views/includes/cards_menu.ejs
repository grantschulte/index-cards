<div ng-show="set.count > 0" class="index-card-number">
  {{ currentCard }} / {{ set.count }}
</div>
<a href="#/profile/{{ profile.id }}"
   ng-class="{ active: title === 'Profile' }">
  <i class="fa fa-folder-open"></i>
</a>
<button ng-class="{ active: addCardsOpen }" 
        ng-click="toggleAddCards()">
  <i class="fa fa-plus"></i>
</button>
<a href="#/profile/{{ profile.id }}/sets/{{ setid }}/edit">
  <i class="fa fa-pencil"></i>
</a>
<a href="#/profile/{{ profile.id }}/sets/{{ setid }}/search">
  <i class="fa fa-search-plus"></i>
</a>
<a href="#/profile/{{ profile.id }}/sets/{{ setid }}"
   ng-class="{ active: title === 'IndexCards v1 - View Cards' }">
  <i class="fa fa-eye"></i>
</a>