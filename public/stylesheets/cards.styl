section.set {
  position:relative;
  padding:0;
  margin-bottom:0;
  width:100%;
  height:100%;
  background-color:$blue_back;
  overflow:hidden;

  div.add-card {
    div {
      margin-bottom:10px;
      clearfix();

      input {        
        display:inline-block;
        float:left;
        margin-right:1%;
        width:79%;
      }
      button {        
        display:inline-block;
        float:left;
        width:20%;
      }
    }
  }

  div.index-card-container {
    position:relative;
    padding:60px 0;
    margin-left:50%;
    width:100%;
    overflow:visible;
    white-space: nowrap;
    clearfix();

    div.scroll {
      height:100%;
      width:100%;
      position:relative;
      transCubicBez(600ms);
      white-space: nowrap;
    }

    div.index-card {
      position                   : relative;
      display:inline-block;
      height                     : 400px;
      width                      : 650px;
      padding                    : 60px;
      margin                     : 0 auto;
      cursor                     : pointer;
      border-radius              : 10px;
      background                 : #fff;
      margin-right:20px;
      box-shadow:1px 1px 1px 0 rgba(0,0,0,0.08);

      transEaseInOut(400ms);

      perspective                : 100px;
      perspective-origin         : 50%;
      -webkit-perspective        : 100px;
      -webkit-perspective-origin : 50%;
      
      z-index:1;
      opacity:0;

      &:first-child {
        margin-left:-325px;
      }

      &.curr {
        opacity:1;
      }

      &.on {        
        box-shadow: 1px -1px 0 0 rgba(0,0,0,0.1);
        transform: rotateX(180deg);
        -webkit-transform: rotateX(180deg);
        transEaseInOut(400ms);

        div.front {          
          opacity: 0;
          transEaseInOut(200ms);
        }

        div.back {          
          opacity: 1;
          transEaseInOut(200ms);
          -webkit-transition-delay: .1s;
        }
      }

      div.front,
      div.back {        
        margin: 0;
        height: 300px;
        line-height: 100px;
      }

      div.front {        
        position           : absolute;
        top                : 0;
        left               : 0;
        width              : 650px;
        height:400px;
        padding            : 0;
        padding-top:187px;
        margin             : 0;
        font-size          : 36px;
        text-align         : center;
        line-height        : 0;
        opacity            : 1;
        color              : #444;

        transEaseInOut(200ms);
        -webkit-transition-delay: .1s;
      }

      div.back {        
        position: absolute;
        top: 0;
        left: 0;
        width: 650px;
        height: 400px;
        margin: 0;
        padding: 0 40px;
        padding-top: 93px;
        font-size: 18px;
        color: #444;
        line-height: 40px;
        opacity: 0;
        z-index: 1;

        transform: rotateX(-180deg);
        -webkit-transform: rotateX(-180deg);
      }

      svg {        
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;

        line {
          stroke-linecap: butt;
        }
        line {
          stroke: #F05E4D;
          stroke-width: .5;
        }
        line {          
          stroke: #2CDEF2;
          stroke-width: .5;
        }
      }
    }

    button.next,
    button.prev {
      position: absolute;
      top:50%;
      margin-top:-40px;
      height:80px;
      width:80px;
      color:$red;
      font-size:80px;
      line-height:38px;
      z-index:9999;
      transEaseInOut(200ms);

      &.next {
        left: 330px;
      }
      &.prev {
        left: -420px;
      }
    }
  }

  div.add-cards {
    font-size:18px;

    input {      
      width:100%;
      background-color:#fff;
      border-radius:0;
      height:60px;
      padding-left:20px;
      font-size:18px;
      border-bottom:1px solid $blue_o2;
    }
    textarea {      
      display:block;
      width:100%;
      border-radius:0;
      background-color:#fff;
      margin:0;
      height:280px;
      padding:20px;
      font-size:18px;
    }
    button {      
      display:block;
      width:100%;
      border-radius:0;
      background-color:$blue_o4;
      margin:0;
      height:60px;
      font-size:18px;

      &:hover {
        background-color:$blue_o6;
      }
    }
  }

  div.pop {    
    position:absolute;
    left:50%;
    width:650px;
    height:400px;
    top:120px
    margin-left:-325px;
    z-index:4;
    background-color:#fff;
    text-align:left;
    border-radius:8px;
    overflow:hidden;
    display:block!important;
    transCubicBez(600ms);

    &.ng-hide {      
      top:-400px;
      transCubicBez(600ms);
    }
  }
}
