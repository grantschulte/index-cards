header
  width:100%;
  padding:0;
  height:60px;
  line-height:60px;
  background-color:$dark;
  color:#fff;
  clearfix();

  a
    color:#fff;
    
    &:hover
      color:$red;

  div.header
    h1
      display:inline-block;
      float:left;
      margin-bottom:0;
      padding-left:20px;
    nav
      display:inline-block;
      float:right;
      height:60px;

      a
        display:inline-block;
        float:left;
        height:60px;
        padding:0 20px;
        font-size:16px;
        margin-left:1px;
        color:#fff;

        &:hover
          color:$red;
        &.active
          color:$red;
          background-color:rgba(0,0,0,0.4);
          
      button
        display:inline-block;
        float:left;
        height:60px;
        width:60px;
        margin:0;
        padding:0;
        text-align:center;
        font-size:20px;
        background-color:rgba(0,0,0,0.4);
        color:#fff;
        border-radius:0;
        margin-left:1px;

        &:hover
          background-color:rgba(0,0,0,0.2);