header
  width:100%;
  padding:0;
  height:60px;
  line-height:60px;
  background-color:$dark;
  color:#fff;
  overflow:hidden;
  clearfix();

  a
    color:#fff;
    
    &:hover
      color:$red;

  div.header
    overflow:visible;
    h1
      display:inline-block;
      float:left;
      margin-bottom:0;
      padding-left:20px;
    nav
      display:inline-block;
      float:right;
      height:60px;
      position:relative;
      -webkit-transition: all 600ms cubic-bezier(0.23, 1, 0.32, 1);
      transition:         all 600ms cubic-bezier(0.23, 1, 0.32, 1);
      right:-260px;

      &.on
        right:0;
        -webkit-transition: all 600ms cubic-bezier(0.23, 1, 0.32, 1);
        transition:         all 600ms cubic-bezier(0.23, 1, 0.32, 1);
      a
        display:inline-block;
        float:left;
        height:60px;
        padding:0 20px;
        font-size:16px;
        margin-left:1px;
        color:#fff;

        &:hover
          color:$red;
        &.active
          color:$red;
          background-color:rgba(0,0,0,0.4);
          
      button
        display:inline-block;
        float:left;
        height:60px;
        width:60px;
        margin:0;
        padding:0;
        text-align:center;
        font-size:20px;
        background-color:rgba(0,0,0,0.4);
        color:#fff;
        border-radius:0;
        margin-left:1px;

        &:hover
          background-color:rgba(0,0,0,0.2);

        &.on
          color:$red;

      ul
        display:inline-block;
        float:left;
        list-style:none;
        padding:0;
        margin:0;

        li
          display:inline-block;
          float:left;
          height:60px;
          background-color:rgba(0,0,0,0.4);
          width:130px;
          color:#fff;
          line-height:60px;
          font-size:14px;
          text-align:center;
          border-left:1px solid #333;
          cursor:pointer;
          &:hover
            color:$red;