section.search {
  div.body-container {
    padding:40px;

    div.find-terms {
      clearfix();
      margin-bottom:40px;

      input[type="text"],
      button {
        display:inline-block;
        float:left;
        height:60px;
      }
      input[type="text"] {
        width:79%;
        margin-right:1%;
        background-color:#fff;
        padding-left:15px;
      }
      button {
        width:20%;
        font-size:18px;
        background-color:$blue_o2;
      }
    }

    ol.word-list {
      li {
        p.definition {
          button.add-word {
            color:$red;
            i {
              margin-top:2px;
              margin-right:2px;
              color:$red;
            }
          }
        }
      }
    }
  }
}