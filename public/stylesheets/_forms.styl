label {  
  display:block;
  margin-bottom:8px;
} 

input[type="text"],
input[type="password"] {  
  height           : 40px;
  width            : 100%;
  border           : 0;
  border-radius    : 5px;
  padding          : 10px;
  background-color : #efefef;
  font-family:'Actor' sans-serif;
  font-weight:normal;
  font-size:18px;
  &:focus {
    outline: none;
  }
}

button {  
  font-size: 14px;
  border: 0;
  border-radius: 5px;
  cursor:pointer;
  &:active,
  &:focus {
    outline:none;
  }
}

button.btn-lg {  
  padding: 0 20px;
  min-width: 120px;
  height: 60px;
  font-size: 18px;
}

textarea {  
  padding: 10px;
  width: 100%;
  height: 100px;
  border: 0;
  border-radius: 5px;
  background-color: #efefef;
  resize: none;

  &:focus {
    outline: none;
  }
}

:-moz-placeholder {
  color:#555;
}
:-ms-input-placeholder {
  color:#555;
}
::-webkit-input-placeholder {
  color:#555;
}
