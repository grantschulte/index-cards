label 
  display:block;
  margin-bottom:8px;

input[type='text'],
input[type='password']
  height           : 40px;
  width            : 100%;
  border           : 0;
  border-radius    : 5px;
  padding          : 10px;
  background-color : #efefef;
  font:normal 18px 'Actor' sans-serif;
  &:focus
    outline : none;

button
  border        : 0;
  border-radius : 5px;
  font-size     : 14px;
  cursor:pointer;
  &:active,
  &:focus
    outline:none;

button.btn-lg
  font-size     : 18px;
  height        : 60px;
  min-width     : 120px;
  padding       : 0 20px;

textarea
  border           : 0;
  background-color : #efefef;
  padding          : 10px;
  width            : 100%;
  height           : 100px;
  resize           : none;
  border-radius    : 5px;
  &:focus
    outline : none;

:-moz-placeholder
  color:#555;

:-ms-input-placeholder
  color:#555;

::-webkit-input-placeholder
  color:#555;
