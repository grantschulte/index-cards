section.profile
  margin-bottom:0;
  background-color:$blue_back;

  div.add-cards
    clearfix();
    input
      display:inline-block;
      float:left;
      width:79%;
      margin-right:1%;
    button
      display:inline-block;
      float:left;
      width:20%;

  div.profile-header
    width         : 100%;
    margin        : 0 auto;
    color         : $dark;
    overflow      : auto;
    padding       : 0;
    height        : 60px;
    position      : relative;
    background-color:$blue;

    :-moz-placeholder
      color:$blue2 !important;

    :-ms-input-placeholder
      color:$blue2 !important;

    ::-webkit-input-placeholder
      color:$blue2 !important;

    > div:first-child
      display:inline-block;
      float:left;
      width:85%;
      clearfix();

      input
        display:inline-block;
        float:left;
        padding          : 0;
        padding-left:20px;
        margin           : 0;
        font-size        : 22px;
        text-align       : left;
        height:60px;
        font-weight:normal;
        background:transparent;
        width:100%;

    > div:last-child
      display:inline-block;
      float:right;
      width:15%;
      clearfix();

      button
        display:inline-block;
        float:left;
        margin:0;
        width:100%;
        height:60px;
        border-radius:0;
        background-color:$blue_o4;
        font-size:16px;

        &:hover
          background-color:$blue_o6;

        &:last-child
          border-left:1px solid rgba(0,0,0,0.1);

        i
          margin-right:10px;

  div.cardsets
    padding:20px;

    div.set
      position:relative;
      display          : inline-block;
      float            : left;
      width            : 160px;
      height           : 100px;
      margin           : 0 12px 12px 0;
      background-color : #fff;
      border-radius    : 5px;
      text-align       : center;
      color:$red;
      cursor:pointer;

      &:before
        display:inline-block;
        position         : relative;
        content          : '';
        top              : 3px;
        left             : 3px;
        width            : 160px;
        height           : 100px;
        border-radius    : 5px;
        background-color : #fff;
        box-shadow:1px 1px 0 0 rgba(0,0,0,0.03);
        z-index:0;

      a 
        color:$red;
        position:absolute;
        top:0;
        left:0;
        width:100%;
        height:100%;
        z-index:1000;
        border-radius    : 5px;
        box-shadow:1px 1px 0 0 rgba(0,0,0,0.03);
        z-index:0;
      p
        margin      : 0;
        line-height : 100px;
        color:$red;
      button.delete-set
        position    : absolute;
        top         : 3px;
        right       : 5px;
        background  : none;
        border      : none;
        color       : #ddd;
        font-size   : 14px;
        padding     : 0;
        margin      : 0;
        cursor:pointer;
        z-index:10;

  div.profile-zero
    p
      padding-top:80px;
      text-align: center;
      font-size: 28px;
      color:$red;